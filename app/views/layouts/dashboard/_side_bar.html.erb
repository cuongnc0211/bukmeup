<!-- Sidebar -->
<aside data-sidebar-target="sidebar" class="fixed inset-y-0 left-0 z-50 w-64 bg-white/80 backdrop-blur-xl border-r border-slate-200 transform -translate-x-full transition-transform duration-300 ease-in-out md:translate-x-0 md:static md:bg-transparent md:border-r-0 md:block md:h-auto md:w-64 md:flex-shrink-0">
  <div class="h-full flex flex-col md:sticky md:top-24">
    <!-- Mobile Close Button -->
    <div class="md:hidden p-4 flex justify-end">
      <button data-action="sidebar#close" class="text-slate-400 hover:text-slate-600">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
      </button>
    </div>

    <nav class="space-y-2 px-4 md:px-0 flex-1 overflow-y-auto md:overflow-visible py-4 md:py-0">
      <% if current_user&.business.present? %>
        <%= link_to dashboard_business_path, class: "flex items-center px-4 py-3 text-sm font-medium rounded-xl transition-all duration-200 group #{(request.path == dashboard_business_path || request.path == dashboard_root_path) ? 'bg-primary-50 text-primary-700 shadow-sm ring-1 ring-primary-100' : 'text-slate-600 hover:bg-white hover:text-primary-600 hover:shadow-sm hover:ring-1 hover:ring-slate-200/50'}" do %>
          <svg class="mr-3 h-5 w-5 #{request.path == dashboard_business_path ? 'text-primary-600' : 'text-slate-400 group-hover:text-primary-500'}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          Dashboard
        <% end %>

        <%= link_to edit_dashboard_business_path, class: "flex items-center px-4 py-3 text-sm font-medium rounded-xl transition-all duration-200 group #{request.path == edit_dashboard_business_path ? 'bg-primary-50 text-primary-700 shadow-sm ring-1 ring-primary-100' : 'text-slate-600 hover:bg-white hover:text-primary-600 hover:shadow-sm hover:ring-1 hover:ring-slate-200/50'}" do %>
          <svg class="mr-3 h-5 w-5 #{request.path == edit_dashboard_business_path ? 'text-primary-600' : 'text-slate-400 group-hover:text-primary-500'}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
          </svg>
          Business Profile
        <% end %>

        <%= link_to dashboard_services_path, class: "flex items-center px-4 py-3 text-sm font-medium rounded-xl transition-all duration-200 group #{request.path == dashboard_services_path ? 'bg-primary-50 text-primary-700 shadow-sm ring-1 ring-primary-100' : 'text-slate-600 hover:bg-white hover:text-primary-600 hover:shadow-sm hover:ring-1 hover:ring-slate-200/50'}" do %>
          <svg class="mr-3 h-5 w-5 #{request.path == dashboard_services_path ? 'text-primary-600' : 'text-slate-400 group-hover:text-primary-500'}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
          Services
        <% end %>

        <div class="pt-6 pb-2">
          <p class="px-4 text-xs font-bold text-slate-400 uppercase tracking-wider">Coming Soon</p>
        </div>
        
        <span class="flex items-center px-4 py-3 text-sm font-medium text-slate-400 cursor-not-allowed opacity-60">
          <svg class="mr-3 h-5 w-5 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Operating Hours
        </span>
        <span class="flex items-center px-4 py-3 text-sm font-medium text-slate-400 cursor-not-allowed opacity-60">
          <svg class="mr-3 h-5 w-5 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          Bookings
        </span>
      <% end %>

      <div class="pt-6 mt-6 border-t border-slate-200">
        <%= link_to edit_dashboard_profile_path, class: "flex items-center px-4 py-3 text-sm font-medium rounded-xl transition-all duration-200 group #{request.path == edit_dashboard_profile_path ? 'bg-primary-50 text-primary-700 shadow-sm ring-1 ring-primary-100' : 'text-slate-600 hover:bg-white hover:text-primary-600 hover:shadow-sm hover:ring-1 hover:ring-slate-200/50'}" do %>
          <svg class="mr-3 h-5 w-5 #{request.path == edit_dashboard_profile_path ? 'text-primary-600' : 'text-slate-400 group-hover:text-primary-500'}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          Account Settings
        <% end %>

        <%= button_to session_path, method: :delete, class: "flex items-center px-4 py-3 text-sm font-medium rounded-xl transition-all duration-200 group text-slate-600 hover:bg-red-50 hover:text-red-600 hover:shadow-sm hover:ring-1 hover:ring-red-200/50 w-full text-left cursor-pointer" do %>
          <svg class="mr-3 h-5 w-5 text-slate-400 group-hover:text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
          </svg>
          Sign out
        <% end %>
      </div>
    </nav>
  </div>
</aside>